<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link rel="stylesheet" href="/public/css/addProduct.css">
    <link rel="shortcut icon" href="/public/img/logo/logoSimple.png" type="image/x-icon">
</head>
<body>
    <% if(user && user.admin){ %>
        <%- include('partials/navAdmin.ejs') %>
    <% }else if(user && user.admin == false){ %>
        <%- include('partials/navUser.ejs') %>
    <% }else{ %>
        <%- include('partials/nav.ejs') %>
    <% } %>

    <h1>Add Product</h1>
    <form method="POST">
        <div class="info">
            <label for="name">Name Product <span style="color: red;">*</span></label>
            <input type="text" name="name" id="name">
        </div>
        <div class="info">
            <label for="image">Image <span style="color: red;">*</span></label>
            <input type="file" name="image" id="image">
        </div>
        <div class="info mdp">
            <label for="price">Price <span style="color: red;">*</span></label>
            <input type="price" name="price" id="price">
        </div>
        <div class="info">
            <input type="submit" value="Valider">            
        </div>
    </form>
</body>
</html>